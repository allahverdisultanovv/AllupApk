
@model List<Category>
@{
    var count = 0;
}
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories Table</h4>
            <a class="btn btn-success" asp-action="create">
                Create Category
            </a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                 Name
                            </th>
                            <th>
                                Image
                            </th>
                            
                            <th>
                                Quantity of Products
                            </th>
                            <th>
                                Tools
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model) {
                            count++;
                            <tr class="table-info">
                            <td>
                                @count
                            </td>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                <img src="~/assets/images/@category.Image" alt="Ouuuppppsss solve your problem" />
                            </td>
                            <td>
                                @category.Products.Count
                            </td>
                            <td>

                                    <a asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                    <a asp-action="update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                    <a class="btn btn-primary">Detail</a>
                            </td>
                            
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>